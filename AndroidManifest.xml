<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.piroxxi.mopidy.wombatclient"
    android:versionCode="11"
    android:versionName="1.1" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="fr.piroxxi.mopidy.wombatclient.ListPlaylists"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.piroxxi.mopidy.wombatclient.ListSongsInPlaylist"
            android:label="@string/title_activity_list_songs_in_playlist" >
        </activity>
        <activity
            android:name="fr.piroxxi.mopidy.wombatclient.SearchActivity"
            android:label="@string/current_playlist" >
        </activity>
        <activity
            android:name="fr.piroxxi.mopidy.wombatclient.NotificationDismissed" >
        </activity>
        <activity
            android:name="fr.piroxxi.mopidy.wombatclient.PreferenceActivity"
            android:label="@string/title_activity_preferences" >
        </activity>
    </application>

</manifest>
