<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="@color/text" >

    <!-- The main content view -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp" >
        </ListView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/background_light"
            android:orientation="horizontal"
    		android:weightSum="7" >
            <ImageButton
                android:id="@+id/prev"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@null"
		        android:scaleType="fitCenter"
        		android:src="@drawable/button_prev"
        		android:contentDescription="@string/previous" />
            <ImageButton
                android:id="@+id/stop"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@null"
		        android:scaleType="fitCenter"
        		android:src="@drawable/button_stop"
        		android:contentDescription="@string/stop" />
            <ImageButton
                android:id="@+id/play"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@null"
		        android:scaleType="fitCenter"
        		android:src="@drawable/button_play"
        		android:contentDescription="@string/play" />
            <ImageButton
                android:id="@+id/next"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@null"
		        android:scaleType="fitCenter"
        		android:src="@drawable/button_next"
        		android:contentDescription="@string/next" />
            <ImageButton
                android:id="@+id/volume"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@null"
		        android:scaleType="fitCenter"
        		android:src="@drawable/button_volume"
        		android:contentDescription="@string/volume" />
            <ImageButton
                android:id="@+id/repeat"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@null"
		        android:scaleType="fitCenter"
        		android:src="@drawable/button_repeat"
        		android:contentDescription="@string/repeat" />
            <ImageButton
                android:id="@+id/random"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@null"
		        android:scaleType="fitCenter"
        		android:src="@drawable/button_random"
        		android:contentDescription="@string/random" />
        </LinearLayout>
    </LinearLayout>

    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:textColor="@color/text"
        android:background="@color/background_light"
        android:choiceMode="singleChoice" />

</android.support.v4.widget.DrawerLayout>